<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pinglinh.cookieclicker.MainActivity">

    <ImageView
        android:id="@+id/imgCookie"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/sunglasses"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/fistHand"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/fisthand"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/lblTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_above="@id/imgCookie"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="42sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgCookie"
        android:text="Click me!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="42sp"/>


</RelativeLayout>
